@model Train
@{
    ViewData["Title"] = "Изменение";
    Layout = "_Layout";
}

<h1>Изменение поезда</h1>

<h4>Поезд</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTrain"/>
            <div class="form-group">
                <label asp-for="TrainName" class="control-label"></label>
                <input type="text" required="" asp-for="TrainName" class="form-control" />
                <span asp-validation-for="TrainName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>