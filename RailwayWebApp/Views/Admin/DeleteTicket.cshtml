@model Ticket
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Удаление билета";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this ticket?</h3>
<div>
    <h4>Existing Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Model.SeatNavigation.WagonNavigation.IdWagon
        </dt>
        <dd class="col-sm-10">
            @Model.SeatNavigation.Seat1
        </dd>
        <dt class="col-sm-2">
            @Model.TrainDepartureTownNavigation.TownName
        </dt>
        <dd class="col-sm-10">
            @Model.TrainArrivalTownNavigation.TownName
        </dd>
        <dt class="col-sm-2">
            @Model.TicketDate
        </dt>
    </dl>

    <form asp-action="DeleteTicket">
        <input type="hidden" asp-for="IdTicket"/>
        <input type="submit" value="Удалить" class="btn btn-danger"/> |
        <a asp-action="Tickets">Назад</a>
    </form>
</div>